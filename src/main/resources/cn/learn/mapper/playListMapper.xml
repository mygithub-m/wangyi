<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.learn.dao.PlayListMapper">
    <!--将歌曲添加进播放列表-->
    <insert id="save">
        insert into playlist values (null,#{s_id},#{s_type},#{u_id})
    </insert>

    <!--查询播放列表中的所有歌曲-->
    <select id="findAll" resultType="PlayList" parameterType="int">
        select * from playlist where u_id = #{uid}
    </select>

    <!--清空表-->
    <delete id="clear" parameterType="int">
        delete from playList where u_id = #{uid}
    </delete>
</mapper>