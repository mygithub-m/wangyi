<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.learn.dao.CommentsMapper">
    <!--保存评论-->
    <insert id="save" parameterType="Comments">
        insert into comments values(null,#{song_id},#{user_id},#{c_date},#{c_content},#{c_support})
    </insert>

    <!--通过歌曲id查找评论--><!--降序排列-->
    <select id="findBySingId" parameterType="int" resultType="Comments">
        select * from comments where song_id = #{id} order by c_support DESC
    </select>

    <!--更新评论获赞数-->
    <update id="updateSupport" parameterType="Comments">
        update comments set c_support = #{c_support} where c_id = #{c_id}
    </update>

    <!--通过评论id获取评论信息-->
    <select id="findById" parameterType="int" resultType="Comments">
        select * from comments where c_id = #{id}
    </select>
</mapper>